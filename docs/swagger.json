        }
    },
    "paths": {
        "/api/image/delete": {
            "delete": {
                "description": "删除相对图片目录下的文件",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "图片"
                ],
                "summary": "删除文件",
                "parameters": [
                    {
                        "type": "string",
                        "description": "文件路径",
                        "name": "path",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.CommonResp"
                        }
                    }
                }
            }
        },
        "/api/image/list": {
            "get": {
                "description": "获取指定目录下的文件与子目录（不递归）",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "图片"
                ],
                "summary": "获取文件列表",
                "parameters": [
                    {
                        "type": "string",
                        "description": "相对 图片 的目录，不传表示根目录",
                        "name": "dir",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/image.ListFilesResp"
                        }
                    }
                }
            }
        },
        "/api/image/upload": {
            "put": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "上传图片",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "图片"
                ],
                "summary": "上传图片",
                "parameters": [
                    {
                        "type": "file",
                        "description": "图片文件",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/image.UploadResp"
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "使用multipart/form-data格式上传图片，支持Apple自动化调用",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "图片"
                ],
                "summary": "表单上传图片",
                "parameters": [
                    {
                        "type": "file",
                        "description": "图片文件（支持curl -F \\",
                        "name": "image",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/image.UploadResp"
                        }
                    }
                }
            }
        },
        "/api/metrics": {
            "get": {
                "tags": [
                    "监控"
                ],
                "summary": "普罗米修斯监控",
                "responses": {}
            }
        },
        "/api/ping": {
            "get": {
                "description": "测试网络接口",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "测试"
                ],
                "summary": "测试网络接口",
                "responses": {}
            }
        },
        "/api/server_info": {
            "get": {
                "description": "服务信息",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "测试"
                ],
                "summary": "服务信息",
                "responses": {}
            }
        },
        "/api/user/captcha": {
            "get": {
                "description": "生成登录验证码",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户"
                ],
                "summary": "生成验证码",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user.CaptchaResp"
                        }
                    }
                }
            }
        },
        "/api/user/test_token": {
            "post": {
                "description": "测试token权限",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "测试"
                ],
                "summary": "测试token权限",
                "parameters": [
                    {
                        "description": "测试token权限",
                        "name": "req",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/user.TestTokenReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.CommonResp"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "image.FileItem": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "文件或目录名",
                    "type": "string"
                },
                "path": {
                    "description": "相对路径",
                    "type": "string"
                },
                "type": {
                    "description": "file | dir",
                    "type": "string"
                },
                "url": {
                    "description": "文件访问 URL，仅 file 有",
                    "type": "string"
                }
            }
        },
        "image.ListFilesResp": {
            "type": "object",
            "properties": {
                "code": {
                    "$ref": "#/definitions/response.Code"
                },
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/image.FileItem"
                    }
                },
                "msg": {
                    "type": "string"
                }
            }
        },
        "image.UploadResp": {
            "type": "object",
            "properties": {
                "code": {
                    "$ref": "#/definitions/response.Code"
                },
                "msg": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "response.Code": {
            "type": "integer",
            "enum": [
                200,
                401,
                500,
                504
            ],
            "x-enum-varnames": [
                "Code_Success",
                "Code_Unauthorized",
                "Code_Err",
                "Code_CaptchaErr"
            ]
        },
        "response.CommonResp": {
            "type": "object",
            "properties": {
                "code": {
                    "$ref": "#/definitions/response.Code"
                },
                "msg": {
                    "type": "string"
                }
            }
        },
        "user.CaptchaData": {
            "type": "object",
            "properties": {
                "base64_image": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                }
            }
        },
        "user.CaptchaResp": {
            "type": "object",
            "properties": {
                "code": {
                    "$ref": "#/definitions/response.Code"
                },
                "data": {
                    "$ref": "#/definitions/user.CaptchaData"
                },
                "msg": {
                    "type": "string"
                }
            }
        },
        "user.TestTokenReq": {
            "type": "object",
            "required": [
                "captcha",
                "captcha_id",
                "token"
            ],
            "properties": {
                "captcha": {
                    "type": "string",
                    "maxLength": 10,
                    "minLength": 1
                },
                "captcha_id": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1
                },
                "token": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "name": "authorization",
            "in": "header"
        }
    }
}